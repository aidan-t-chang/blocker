{
  "name": "SmartBlocker",
  "description": "A smarter way to block distracting websites.",
  "version": "1.0",
  "manifest_version": 3,
  "content_scripts": [
    {
        "css": ["style.css"],
        "matches": ["<all_urls>"],
        "js": ["content.js"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": "shield.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "permissions": [
    "storage",
    "tabs",
    "alarms"
  ]
}